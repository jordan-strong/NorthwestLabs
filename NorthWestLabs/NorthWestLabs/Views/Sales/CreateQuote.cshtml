@model NorthWestLabs.Models.Sales

@{
    ViewBag.Title = "Create Quote";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    //this is the list for the dropdown selections
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Biochemical Pharmacology (BP)",
        Value = "Biochemical Pharmacology (BP)",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "DiscoveryScreen® (DS)",
        Value = "DiscoveryScreen® (DS)",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "ImmunoScreen® (IS)",
        Value = "ImmunoScreen® (IS)"
    });
    listItems.Add(new SelectListItem
    {
        Text = "ProfilingScreen® (PF)",
        Value = "ProfilingScreen® (PF)"
    });
    listItems.Add(new SelectListItem
    {
        Text = "PharmaScreen® (PS)",
        Value = "PharmaScreen® (PS)"
    });
    listItems.Add(new SelectListItem
    {
        Text = "CustomScreen™ (CS)",
        Value = "CustomScreen™ (CS)"
    });
}

<div class="container">
    <h2>Create Quote</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @*<h4></h4>*@
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.assay, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.assay, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.assay, "", new { @class = "text-danger" })*@
                    @Html.DropDownListFor(model => model.assay, listItems, "-- Select Assay --")
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.compound, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.compound, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.compound, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.weight, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.weight, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.weight, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-default" href='@Url.Action("QuoteSummary", "Sales", new {})'>Create quote</a>
                </div>
            </div>

        </div>
    }
    <div>
        @Html.ActionLink("Back to Home", "Index", "Home")
    </div>
</div>